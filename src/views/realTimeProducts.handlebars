<h2 class="text-center my-4">Formulario para Agregar Productos</h2>

<form class="container border rounded p-4 shadow-sm bg-light">
    <div class="mb-3">
        <label for="title" class="form-label">Título</label>
        <input type="text" id="title" class="form-control" placeholder="Título">
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Descripción</label>
        <input type="text" id="description" class="form-control" placeholder="Descripción">
    </div>
    <div class="mb-3">
        <label for="price" class="form-label">Precio</label>
        <input type="number" id="price" class="form-control" placeholder="Precio" min="0">
    </div>
    <div class="mb-3">
        <label for="img" class="form-label">Imagen</label>
        <input type="text" id="img" class="form-control" value="Sin Imagen">
    </div>
    <div class="mb-3">
        <label for="code" class="form-label">Código</label>
        <input type="text" id="code" class="form-control" placeholder="Código">
    </div>
    <div class="mb-3">
        <label for="stock" class="form-label">Stock</label>
        <input type="number" id="stock" class="form-control" placeholder="Stock">
    </div>
    <div class="mb-3">
        <label for="category" class="form-label">Categoría</label>
        <input type="text" id="category" class="form-control" placeholder="Categoría">
    </div>
    <button type="button" id="btnEnviar" class="btn btn-primary w-100">Agregar</button>
</form>

